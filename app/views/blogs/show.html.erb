<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <%= image_tag(@blog.image_url) if @blog.image.present? %>
    <div>
      <h4><%= @blog.caption %></h4>
      <p>
        <%= link_to 'Edit', edit_blog_path(@blog) %>
        <%= link_to 'Destroy', @blog, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
  </div>
</div>
